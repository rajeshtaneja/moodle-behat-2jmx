/**
 * CLI tool for creating test plan using behat features.
 *
 * @package    moodlehq_behat_2jmx
 * @copyright  2015 Rajesh Taneja <rajesh@moodle.com>
 * @license    http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later
 */

if (isset($_SERVER['REMOTE_ADDR'])) {
    die(); // No access from web!.
}

// Check if it's downloaded via composer or cloned.
if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    // Cloned.
    require_once(__DIR__ . '/../vendor/autoload.php');

    // Update composer dependencies.
    require_once(__DIR__.'/../classes/util.php');
    \moodlehq\behat_2jmx\util::testing_update_composer_dependencies(__DIR__.'/..');

} else if (file_exists(__DIR__ . '/../../../autoload.php')) {
    // Via composer.
    require_once(__DIR__ . '/../../../autoload.php');

} else {
    // Install composer dependencies.
    require_once(__DIR__.'/../classes/util.php');
    \moodlehq\behat_2jmx\util::testing_update_composer_dependencies(__DIR__.'/..');

    require_once(__DIR__ . '/../vendor/autoload.php');
}

require_once(__DIR__ . '/../classes/generator_command.php');
require_once(__DIR__ . '/../classes/generator_application.php');

use moodlehq\behat_2jmx\generator_command;
use moodlehq\behat_2jmx\generator_application;
use Symfony\Component\Console\Application;

$application = new generator_application();
$status = $application->run();


exit($status);
